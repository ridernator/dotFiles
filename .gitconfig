[alias]
    ci = commit
    co = checkout
    br = branch
    st = status
    fe = fetch --prune
    gr = log --graph --oneline
    gra = log --graph --oneline --all
    dt = difftool
    dtc = difftool --cached

[commit]
    gpgsign = true

[diff]
    tool = meld

[difftool]
    prompt = false

[difftool "meld"]
    cmd = meld "$LOCAL" "$REMOTE"

[merge]
    tool = meld

[mergetool "meld"]
    cmd = meld "$LOCAL" "$MERGED" "$REMOTE" --output "$MERGED"
